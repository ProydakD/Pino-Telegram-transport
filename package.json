{
  "name": "pino-telegram-logger-transport",
  "version": "1.6.0",
  "description": "A transport for Pino that forwards structured logs to the Telegram Bot API, supports media attachments, and ships ready-made adapters for NestJS, Fastify, and AWS Lambda",
  "main": "dist/index.js",
  "scripts": {
    "test": "vitest run",
    "build": "tsc --project tsconfig.json",
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"examples/**/*.ts\" \"*.{js,ts,json,md}\" \".codex/**/*.md\" \"docs/**/*.md\"",
    "prerelease": "npm run lint && npm test && npm run build",
    "release": "standard-version",
    "postrelease": "git push --follow-tags"
  },
  "keywords": [
    "aws-lambda",
    "fastify",
    "logging",
    "nestjs",
    "pino",
    "telegram",
    "transport"
  ],
  "author": "Dmitriy Proydak <proydak@gmail.com>",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "pino-abstract-transport": "^2.0.0",
    "undici": "^7.16.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "pino": "^9.0.0",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ProydakD/pino-telegram-transport.git"
  },
  "bugs": {
    "url": "https://github.com/ProydakD/pino-telegram-transport/issues"
  },
  "homepage": "https://github.com/ProydakD/pino-telegram-transport#readme",
  "bin": {
    "pino-telegram-cli": "dist/cli.js"
  }
}
